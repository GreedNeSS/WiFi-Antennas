@{
    ViewData["Title"] = "Create";
}
@model AntennaViewModel

<div class="container px-4">

    <h3>Введите данные новой антенны:</h3>
    <div>Поля со звёздочкой обязательны к заполнению!</div>
    <form method="post">
        <div>
            <label asp-for="Ip" class="form-label">Введите IP: * </label>
            <input asp-for="Ip" class="form-control" />
            <div class="invalid-feedback" style="display:block;">
                <span asp-validation-for="Ip"></span>
            </div>
        </div>
        <label asp-for="Address.City" class="form-label">Введите адрес (Обязательные поля улица и дом): </label>
        <div class="input-group input-group-sm mb-3">
            <span class="input-group-text" id="inputGroup-sizing-sm">Город:</span>
            <input asp-for="Address.City" class="form-control" />
            <span class="input-group-text" id="inputGroup-sizing-sm">Улица: *</span>
            <input asp-for="Address.Street" class="form-control" />
            <div class="invalid-feedback" style="display:block;">
                <span asp-validation-for="Address.Street"></span>
            </div>
        </div>
        <div class="input-group input-group-sm mb-3">
            <span class="input-group-text" id="inputGroup-sizing-sm">Дом: *</span>
            <input asp-for="Address.House" class="form-control" />
            <span class="input-group-text" id="inputGroup-sizing-sm">Корпус:</span>
            <input asp-for="Address.Building" class="form-control" />
            <span class="input-group-text" id="inputGroup-sizing-sm">Подъезд:</span>
            <input asp-for="Address.Entrance" class="form-control" />
            <div class="invalid-feedback" style="display:block;">
                <span asp-validation-for="Address.House"></span>
            </div>
        </div>
        <div>
            <label asp-for="SSID" class="form-label">Введите SSID: * </label>
            <input asp-for="SSID" class="form-control" />
            <div class="invalid-feedback" style="display:block;">
                <span asp-validation-for="SSID"></span>
            </div>
        </div>
        <div>
            <label asp-for="Login" class="form-label">Введите логин: * </label>
            <input asp-for="Login" class="form-control" />
            <div class="invalid-feedback" style="display:block;">
                <span asp-validation-for="Login"></span>
            </div>
        </div>
        <div>
            <label asp-for="AccessPointPassword" class="form-label">Введите пароль точки доступа: * </label>
            <input asp-for="AccessPointPassword" class="form-control" />
            <div class="invalid-feedback" style="display:block;">
                <span asp-validation-for="AccessPointPassword"></span>
            </div>
        </div>
        <div>
            <label asp-for="HardwarePassword" class="form-label">Введите пароль для настройки антенны: * </label>
            <input asp-for="HardwarePassword" class="form-control" />
            <div class="invalid-feedback" style="display:block;">
                <span asp-validation-for="HardwarePassword"></span>
            </div>
        </div>
        <div>
            <label asp-for="IsServer" class="form-label">Сервер: </label>
            <input class="form-check-input" type="checkbox" role="switch" asp-for="IsServer" />
        </div>
        <div>
            <label asp-for="Channel" class="form-label">Введите канал: </label>
            <input asp-for="Channel" type="number" class="form-control" value="1" />
        </div>
        <div>
            <label asp-for="ChannelWidth" class="form-label">Введите ширину: </label>
            <input asp-for="ChannelWidth" type="number" class="form-control" value="40" />
        </div>
        <div>
            <label asp-for="Producer" class="form-label">Введите производителя: </label>
            <input asp-for="Producer" class="form-control" value="UBNT" />
        </div>
        <div>
            <label asp-for="Commentary" class="form-label">Введите комментарий: </label>
            <input asp-for="Commentary" class="form-control" />
        </div>
        <div>
            <button class="btn btn-outline-success mt-3">Добавить</button>
        </div>
    </form>
</div>
