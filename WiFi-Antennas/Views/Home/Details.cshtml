@{
    ViewData["Title"] = "Детали";
}

@model AntennaViewModel

<div class="card text-bg-light mb-3" ">
    <div class="card-header">Карточка антенны</div>
    <div class="card-body">
        <h5 class="card-title">Параметры антенны:</h5>
        <table class="table table-light table-striped table-hover">
            <tr>
                <th></th>
                <th>
                    @if (Model.IsServer)
                    {
                        <span>Сервер</span>
                    }
                    else
                    {
                        <span>Клиент</span>
                    }
                </th>
            </tr>
            <tr>
                <td>IP-Адрес:</td>
                <td>@Model.IP.StringIP</td>
            </tr>
            <tr>
                <td>Адрес:</td>
                <td>@Model.Address.ShortAddress</td>
            </tr>
            <tr>
                <td>Название точки доступа:</td>
                <td>@Model.SSID</td>
            </tr>
            <tr>
                <td>Логин для входа в антенну:</td>
                <td>@Model.Login</td>
            </tr>
            <tr>
                <td>Пароль точки доступа:</td>
                <td>@Model.AccessPointPassword</td>
            </tr>
            <tr>
                <td>Пароль для настройки антенны:</td>
                <td>@Model.HardwarePassword</td>
            </tr>
            <tr>
                <td>Канал:</td>
                <td>@Model.Channel</td>
            </tr>
            <tr>
                <td>Ширина канала (MHz):</td>
                <td>@Model.ChannelWidth</td>
            </tr>
            <tr>
                <td>Производитель:</td>
                <td>@Model.Producer</td>
            </tr>
            <tr>
                <td>Комментарий:</td>
                <td>@Model.Commentary</td>
            </tr>
        </table>
    </div>
</div>