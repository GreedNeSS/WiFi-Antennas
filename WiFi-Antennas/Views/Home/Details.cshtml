@{
    ViewData["Title"] = "Детали";
}

@model AntennaViewModel

<div class="card text-bg-light mb-3">
    <div class="card-header">Карточка антенны</div>
    <div class="card-body">
        <h5 class="card-title">Параметры антенны:</h5>
        <table class="table table-light table-striped table-hover">
            <tr>
                <th></th>
                <th>
                    @if (Model.IsServer)
                    {
                        <span>Сервер</span>
                    }
                    else
                    {
                        <span>Клиент</span>
                    }
                </th>
            </tr>
            <tr>
                <td>IP-Адрес:</td>
                <td>@Model.IP.StringIP</td>
            </tr>
            <tr>
                <td>Адрес:</td>
                <td>@Model.Address.ShortAddress</td>
            </tr>
            <tr>
                <td>Название точки доступа:</td>
                <td>@Model.SSID</td>
            </tr>
            <tr>
                <td>Логин для входа в антенну:</td>
                <td>@Model.Login</td>
            </tr>
            <tr>
                <td>Пароль точки доступа:</td>
                <td>@Model.AccessPointPassword</td>
            </tr>
            <tr>
                <td>Пароль для настройки антенны:</td>
                <td>@Model.HardwarePassword</td>
            </tr>
            <tr>
                <td>Канал:</td>
                <td>@Model.Channel</td>
            </tr>
            <tr>
                <td>Ширина канала (MHz):</td>
                <td>@Model.ChannelWidth</td>
            </tr>
            <tr>
                <td>Производитель:</td>
                <td>@Model.Producer</td>
            </tr>
            <tr>
                <td>Комментарий:</td>
                <td>@Model.Commentary</td>
            </tr>
        </table>

        <a asp-action=Edit asp-route-antennaId=@Model.Id class="btn btn-outline-success mt-3" role="button">Редактировать</a>
        <button type="button" data-delete-id=@Model.Id class="btn btn-outline-danger mt-3" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Удалить
        </button>

        <!-- Модальное окно -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Удаление антенны!</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
                    </div>
                    <div class="modal-body">
                        Вы действительно хотите удалить эту антенну?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-secondary mt-3" data-bs-dismiss="modal">Закрыть</button>
                        <form method="post" id="formDelete" asp-action=Delete>
                            <button type="submit" class="btn btn-outline-danger mt-3">Удалить</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/site.js" asp-append-version="true"></script>