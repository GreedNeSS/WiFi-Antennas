@{
    ViewData["Title"] = "Edit";
}
@model AntennaViewModel

<div class="container px-4">

    <h3>Изменить антенну:</h3>

    <form method="post">
        <input asp-for="Id" hidden/>
        <label asp-for="IP.Sections" class="form-label">Введите IP: * </label>
        <div class="input-group">
            <input asp-for="IP.Sections[0]" type="number" class="form-control" />
            <span class="input-group-text">.</span>
            <input asp-for="IP.Sections[1]" type="number" class="form-control" />
            <span class="input-group-text">.</span>
            <input asp-for="IP.Sections[2]" type="number" class="form-control" />
            <span class="input-group-text">.</span>
            <input asp-for="IP.Sections[3]" type="number" class="form-control" />
            <div class="invalid-feedback" style="display:block;">
                <span asp-validation-for="IP.Sections"></span>
            </div>
        </div>
        <label asp-for="Address.City" class="form-label">Введите адрес (Обязательные поля улица и дом): </label>
        <div class="row g-3">
            <div class="col-md">
                <div class="form-floating">
                    <input asp-for="Address.City" class="form-control" placeholder="Город" />
                    <label asp-for="Address.City">Город: </label>
                </div>
            </div>
            <div class ="col-md">
                <div class="form-floating">
                    <input asp-for="Address.Street" class="form-control" placeholder="Улица" />
                    <label asp-for="Address.Street">Улица: *</label>
                    <div class="invalid-feedback" style="display:block;">
                        <span asp-validation-for="Address.Street"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="row g-3">
            <div class="col-md">
                <div class="form-floating">
                    <input asp-for="Address.House" class="form-control" placeholder="Дом" />
                    <label asp-for="Address.House">Дом: * </label>
                    <div class="invalid-feedback" style="display:block;">
                        <span asp-validation-for="Address.House"></span>
                    </div>
                </div>
            </div>
            <div class="col-md">
                <div class="form-floating">
                    <input asp-for="Address.Building" class="form-control" placeholder="Корпус" />
                    <label asp-for="Address.Building">Корпус: </label>
                </div>
            </div>
            <div class="col-md">
                <div class="form-floating">
                    <input asp-for="Address.Entrance" class="form-control" placeholder="Подъезд" />
                    <label asp-for="Address.Entrance">Подъезд: </label>
                </div>
            </div>
        </div>
        <div>
            <label asp-for="SSID" class="form-label">Введите SSID: * </label>
            <input asp-for="SSID" class="form-control" />
            <div class="invalid-feedback" style="display:block;">
                <span asp-validation-for="SSID"></span>
            </div>
        </div>
        <div>
            <label asp-for="Login" class="form-label">Введите логин: * </label>
            <input asp-for="Login" class="form-control" />
            <div class="invalid-feedback" style="display:block;">
                <span asp-validation-for="Login"></span>
            </div>
        </div>
        <div>
            <label asp-for="AccessPointPassword" class="form-label">Введите пароль точки доступа: * </label>
            <input asp-for="AccessPointPassword" class="form-control"/>
            <div class="invalid-feedback" style="display:block;">
                <span asp-validation-for="AccessPointPassword"></span>
            </div>
        </div>
        <div>
            <label asp-for="HardwarePassword" class="form-label">Введите пароль для настройки антенны: * </label>
            <input asp-for="HardwarePassword" class="form-control"/>
            <div class="invalid-feedback" style="display:block;">
                <span asp-validation-for="HardwarePassword"></span>
            </div>
        </div>
        <div>
            <label asp-for="IsServer" class="form-label">Сервер: </label>
            <input class="form-check-input" type="checkbox" role="switch" asp-for="IsServer" />
        </div>
        <div>
            <label asp-for="Channel" class="form-label">Введите канал: </label>
            <input asp-for="Channel" type="number" class="form-control" />
        </div>
        <div>
            <label asp-for="ChannelWidth" class="form-label">Введите ширину: </label>
            <input asp-for="ChannelWidth" type="number" class="form-control" />
        </div>
        <div>
            <label asp-for="Producer" class="form-label">Введите производителя: </label>
            <input asp-for="Producer" class="form-control" value="UBNT" />
        </div>
        <div>
            <label asp-for="Commentary" class="form-label">Введите комментарий: </label>
            <input asp-for="Commentary" class="form-control" />
        </div>
        <div>
            <button class="btn btn-outline-success mt-3">Изменить</button>
        </div>
    </form>
</div>
