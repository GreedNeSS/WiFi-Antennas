@{
    ViewData["Title"] = "Антенны";
}

@model IEnumerable<AntennaViewModel>

<h2>
    Список антенн:
</h2>
<div class="text-center">
    <table class="table table-striped table-hover">

        <tr>
            <th>Серв/Клиент</th>
            <th>IP-Адрес</th>
            <th>Адрес</th>
            <th>SSID</th>
            <th>Пароль</th>
            <th>Действия</th>
        </tr>

        @foreach (var antenna in @Model)
        {
            <tr>
                @if (antenna.IsServer)
                {
                    <td>Серв</td>
                }else
                {
                    <td>Кл</td>
                }
                <td>@antenna.Ip</td>
                <td>@antenna.Address</td>
                <td>@antenna.SSID</td>
                <td>@antenna.Password</td>
                <td>
                    <a asp-action=Details asp-route-id=@antenna.Id class="btn btn-outline-secondary btn-sm" role="button">Детали</a>
                    <a asp-action=Edit asp-route-id=@antenna.Id class="btn btn-outline-success btn-sm" role="button">Редактировать</a>
                    <form asp-controller=Api asp-action=Delete asp-route-id=@antenna.Id style="display: inline-block">
                        <button type="button" class="btn btn-outline-danger btn-sm">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </table>
</div>
